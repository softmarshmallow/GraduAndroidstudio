<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.indiepopcorn.gradu">

    <application
        android:name=".GraduApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".Views.SplashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Views.Main.MainTabControllerActivity">
        </activity>
        <activity android:name=".Views.Login.LoginLandingpageActivity">
        </activity>
        <activity android:name=".Views.Login.LoginActivity">
        </activity>
        <activity android:name=".Views.Login.RegisterActivity">
        </activity>
    </application>

</manifest>